<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands related to the PHPMD"
            id="Plugin_org.phpsrc.eclipse.pti.tools.phpmd.command.category"
            name="PHPMD">
      </category>
      <command
            categoryId="Plugin_org.phpsrc.eclipse.pti.tools.phpmd.command.category"
            description="Run PHP Mess Detector"
            id="Plugin_org.phpsrc.eclipse.pti.tools.phpmd.commands.runMessDetector"
            name="Run PHP Mess Detector">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.phpsrc.eclipse.pti.ui.menus.phptools?after=additions">
         <command
               commandId="Plugin_org.phpsrc.eclipse.pti.tools.phpmd.commands.runMessDetector"
               style="push"
               tooltip="Run PHP Mess Detector on selected files or folders">
            <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
